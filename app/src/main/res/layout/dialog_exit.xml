<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:src="@drawable/ad_img"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="-0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="서비스를 종료 하시겠습니까?"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/dialog_btN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="아니오"
            android:background="@drawable/radius_negative"
            android:layout_marginRight="20dp"
            android:onClick="click_dialogN"
            />
        <Button
            android:id="@+id/dialog_btY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="예"
            android:background="@drawable/radius_positive"
            android:onClick="click_dialogY"
            />
    </LinearLayout>
</LinearLayout>
